<body>
    <div class="panel pricing-table">
    <h2 class="ExcelHeading">Manual Analysis Sheet - Upload</h2>
   
    <form asp-action="UploadExcel"  method="post" enctype="multipart/form-data">
        <div class="file-upload">
            <input type="file" name="file" id="upload" onchange="showFileName()">
            <label for="upload">Choose a file</label>
            <div id="file-name"></div>
        </div>
        <p class="alerts">@ViewBag.file</p>
            <button type="submit" class="pricing-button is-featured">Upload</button>
    </form>
    </div>
